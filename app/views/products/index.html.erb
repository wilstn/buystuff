<h1>All Products</h1>

<div class="row">
  <% @products.each do |product| %>
    <div class="col-xs-3">
      <div class="card">
        <img src="<%= product.product_image %>" alt="" class="card-img-top">
        <div class="card-block">
          <h4 class="card-title">
            <%= product.name %>
          </h4>
          <p class="card-text">
            <%= product.description.truncate(100) %>
          </p>
          <p class="card-text">
            <%= number_to_currency product.price %>
          </p>
          <p class="card-text">
            Left: <%= product.remaining_quantity %>
          </p>
          <p class="card-text">
            <%= link_to 'View Details', product_path(product) %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>

<div class="btn-group" role="group" aria-label="Basic example">
  <%= link_to_prev_page @products, 'Previous Page', class: "btn btn-secondary" %>
  <%= link_to_next_page @products, 'Next Page', class: "btn btn-secondary" %>
</div>
